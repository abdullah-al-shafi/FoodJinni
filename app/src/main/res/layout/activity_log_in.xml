<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login_activity"
    tools:context=".register.LogIn">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:background="@drawable/food_jinni"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Food Jinni"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@color/colorblack"
            android:textStyle="bold"/>

        <android.support.design.widget.TextInputLayout
            android:layout_margin="16dp"
            android:layout_below="@+id/icon"
            android:id="@+id/login_input_email"
            android:hint="Enter your email"
            android:textColorHint="@color/colorblack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <EditText
                android:id="@+id/login_email"
                android:inputType="textEmailAddress"
                android:textColor="#000"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_below="@+id/login_input_email"
            android:id="@+id/login_input_password"
            android:layout_width="match_parent"
            android:hint="Enter your password"
            android:textColorHint="@color/colorblack"
            android:layout_height="wrap_content"
            >

            <EditText
                android:layout_margin="16dp"
                android:id="@+id/login_password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="@color/colorblack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/login_btn_login"
            android:text="LogIn"
            android:background="@drawable/new_list"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/login_btn_forgot_password"
            android:clickable="true"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="Forgot Password ?"
            android:textColor="@color/colorPrimaryDark"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/login_layout_or"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:background="#c4c8c9"
                android:layout_margin="5dp"/>
            <TextView
                android:padding="5dp"
                android:textColor="#fff"
                android:text="OR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:background="#c4c8c9"
                android:layout_margin="5dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/login_btn_signup"
            android:layout_gravity="center"
            android:clickable="true"
            android:textStyle="bold"
            android:text="Sign Up"
            android:textColor="@color/colorPrimaryDark"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
