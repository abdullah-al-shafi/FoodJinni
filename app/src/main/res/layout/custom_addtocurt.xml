<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="280dp"
    android:layout_height="375dp"
    android:layout_gravity="center">

    <LinearLayout
        android:background="@drawable/background"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:background="#802E3549"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:id="@+id/txtclose"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textColor="#FF0000"
                android:text="X"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_gravity="end"
                android:gravity="center"
                />

            <LinearLayout
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/FoodETNAme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food Name"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:textSize="18sp"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/FoodETSub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food Name"
                    android:textColor="#FFF"
                    android:textSize="16sp"
                    android:layout_marginTop="5dp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Note"
                        android:textColor="#FFF"
                        android:layout_marginTop="5dp"/>


                    <EditText
                        android:id="@+id/etNote"
                        android:paddingTop="8dp"
                        android:layout_marginTop="4dp"
                        android:paddingLeft="10dp"
                        android:background="@drawable/write_text_4"
                        android:layout_width="match_parent"
                        android:layout_height="66dp"
                        android:layout_weight="3"
                        android:minLines="6"
                        android:maxLines="10"
                        android:gravity="start"
                        android:includeFontPadding="true"
                        android:inputType="textMultiLine"
                        android:textColor="#000"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="32pt"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">

                <android.support.v7.widget.CardView
                    android:layout_marginRight="8dp"
                    android:id="@+id/txtclose2"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="match_parent"
                    >
                    <LinearLayout
                        android:gravity="center"
                        android:padding="4dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="X"
                            android:layout_marginLeft="8dp"
                            android:textColor="#fff"
                            />

                        <TextView
                            android:textSize="12sp"
                            android:layout_marginTop="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cancel"
                            android:layout_marginLeft="8dp"
                            android:textColor="#fff"
                            />


                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_marginLeft="4dp"
                    android:id="@+id/cart"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:padding="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/add_note0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/curt2_wh"/>
                        <TextView
                            android:id="@+id/add_note"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CART"
                            android:layout_marginLeft="4dp"
                            android:textColor="#fff"
                            />

                        <TextView
                            android:id="@+id/foodPrice"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="120.00"
                            android:layout_marginLeft="6dp"
                            android:textColor="#fff"
                            />


                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


